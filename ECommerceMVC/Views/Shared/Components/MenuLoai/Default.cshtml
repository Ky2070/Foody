@model IEnumerable<ECommerceMVC.ViewModels.MenuLoaiVM>

<div class="col-lg-12">
	<div class="mb-3">
		<h4>Danh mục</h4>
		<ul class="list-unstyled fruite-categorie">
			@foreach (var item in Model)
			{
				<li>
					<div class="d-flex justify-content-between fruite-name">
						<a asp-controller="HangHoa" asp-action="Index" class="text-black-50" asp-route-loai="@item.MaLoai">
							<i class="fas fa-apple-alt me-2 text-primary"></i>@item.TenLoai
						</a>
						<span>(@item.SoLuong)</span>
					</div>
				</li>
			}

		</ul>
	</div>
</div>